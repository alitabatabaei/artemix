<%= form_for(@design, :remote => true) do |f| %>
    <div class='field'>
        <%= f.label :name, "Design name (max. 24 characters)" %>
        <%= f.text_field :name %>
    </div>
    <div class='field'>
        <%= f.label :designer, "Design by (max. 40 characters)" %>
        <%= f.text_field :designer %>
    </div>
    <div class='field'>
        <%= f.label :contact, "Phone number or email address to contact you" %>
        <%= f.text_field :contact %>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class='actions'>
        <%= f.submit %>
    </div>
<% end %>